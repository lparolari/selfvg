  "version": "0.2.0",
  "configurations": [
    {
      "name": "flickr",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "args": [
        "--exp_notes=delete",
        "--dev",
        "--accelerator=cpu",
        "--num_workers=12",
        "--logger=tensorboard",
        "--dataset=flickr30k",
        "--mode=train",
        "--max_epochs=25",
        "--batch_size=2",
        "--train_fract=0.01",
        "--neg_selection=textual_sim_max",
        "--use_relations",
        "--omega=1.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "HDF5_USE_FILE_LOCKING": "false"
      }
    },
    {
      "name": "referit",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "args": [
        "--dataset=referit",
        "--dev",
        "--batch_size=4",
        "--accelerator=cpu",
        "--logger=tensorboard",
        "--num_workers=12",
        "--neg_selection=textual_sim_max",
        "--mode=train",
        "--exp_notes=delete",
        "--max_epochs=1",
        "--train_fract=0.1",
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "HDF5_USE_FILE_LOCKING": "false"
      }
    },
    {
      "name": "referit (checkpoint)",
      "type": "python",
      "request": "launch",
